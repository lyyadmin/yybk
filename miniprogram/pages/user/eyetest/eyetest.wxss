/* pages/user/eyetest/eyetest.wxss */
.page-body{
  width: 100%;
  height: 100%;
  background: #FFFFFF;
}
.canvas {
  width: 300px;
  height: 300px;
  background-color: #fff;
  margin: 10px auto;
}
.top-view{
  width: auto;
  height: 60px;
  line-height: 60px;
  text-align: center;
  color: #FF0000;
  font-size: 26px;
  font-weight: normal;
}
.number-view{
  color: #333333;
  font-size: 30px;
  font-weight: bold;
  font-family: "楷体"
}
.time-view{
  float: right;
  padding: 0 20px;
  font-family: "楷体"
}
.label-view{
  float: left;
  padding: 0 10px;
  font-size: 20px;
  color: #534278;
}
.btn-box{
  text-align: center;
  padding: 20px 0;
}
button{
  width:40%;
  background: #30bf6d;
  display: inline-block;
  color:#FFFFFF;
  margin: 0 10px;
}