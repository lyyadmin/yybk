/* pages/user/mine/mine.wxss */
.mine-box .head-pane{
  width: 100%;
  height: 100px;
  line-height: 100px;
  background: #30bf6d;
}
.mine-box .headphoto{
  display: inline-block;
  width:60px;
  height: 60px;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  margin-left: 30px;
  vertical-align: middle;
}
.mine-box .nichen{
  display: inline-block;
  width: auto;
  height:40px;
  line-height: 40px;
  color:#FFFFFF;
  margin-left:15px;
  font-size: 22px;
  vertical-align: middle;
  padding-left:5px;
  padding-right:5px;
  border:solid 1px #30bf6d;
}
.mine-box .gender{
  display: inline-block;
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-left:0px;
}
.mine-box  .line-pane{
  width:100%;
  height:50px;
  background:#FFFFFF;
  margin-top:10px;
  box-shadow: 0 2px 2px #ddd;
}
.mine-box .line-text{
  display: inline-block;
  width:auto;
  height:50px;
  line-height: 50px;
  margin-left: 10px;
  color:#333;
  vertical-align: middle;
  font-size: 16px;
}
.mine-box .arraw_right{
  display: block;
  width:20px;
  height: 20px;
  float: right;
  margin: 15px 10px 0 0;
}