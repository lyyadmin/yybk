/* pages/home/typelist/typelist.wxss */
.list-container{
  width: 100%;
  height: auto;
}
.list-container .list-item{
  width: 100%;
  height: 60px;
  border-bottom:solid 1px #ddd; 
  background: #FFF;
}
.list-container .item-icon{
  display: inline-block;
  width: 66px;
  height: 50px;
  border:solid 1px #ddd;
  vertical-align: middle;
  margin: 4px 20px 0 20px;
}
.list-container .text-box{
  position: absolute;
  display: inline-block;
  width: auto;
  height: 40px;
  font-size: 16px;
  margin-top: 5px;
}
.list-container .item-name{
  display: inline-block;
  width: auto;
  font-size: 18px;
  color: #000;
  font-family: Microsoft YaHei;
}
.list-container .item-name text{
  font-size: 14px;
  color: rgb(38, 122, 59);
  margin-left: 5px;
}
.list-container .item-subtitle{
  height: 20px;
  line-height: 20px;
  display: block;
  font-size: 16px;
  margin-top: 2px;
  color: #666;
  overflow: hidden;
  text-overflow : ellipsis;
  padding-right: 5px;
}
