/* pages/home/index/index.wxss */
.index-container{
  width: 100%;
  height: auto;
}
.index-container .item-box{
  display: block;
  width: 100%;
  height: auto;
  background: #ddd;
}
.index-container .banner-img{
  display: block;
  width: 100%;
  height: 100%;
}
.index-container .swiper-item{
  display: inline-block;
  width: 100%;
  height: 100%;
}
.index-container .type-box{
  width: 100%;
  height: auto;
  margin-bottom: 15px;
}
.index-container .type-item{
  display: inline-block;
  width: 50%;
  height: auto;
}
.index-container .type-card{
  width: auto;
  height: 150px;
  background: #FFF;
  border:solid 1px #ddd;
  padding: 10px;
}
.index-container  .type-item:nth-child(2n+1) .type-card{
  margin: 15px 7px 0 15px;
}
.index-container  .type-item:nth-child(2n) .type-card{
  margin: 15px 15px 0 7px;
}
.index-container .type-img{
  width:100%;
  height: 130px;
}
.index-container .type-name{
  width:auto;
  height: 20px;
  margin-left: 5px;
}
.index-container .tools-box{
  background: #FFFFFF;
  width: auto;
  height: auto;
  padding: 8px;
  margin: 0;
}
.index-container .tools-item{
  display: inline-block;
  width: 25%;
  height: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 20px;
  text-align: center;
  padding: 8px 0;
  text-decoration: underline;
}
.index-container .vedio-box{
  width: auto;
  padding: 5px 5px;
  padding-bottom: solid 1px #f6f6f6;
  background: #FFFFFF;
}
.index-container .v-vedio{
  width: 100%;
}
.index-container .list{
  padding: 5px;
  border-bottom: solid 1px #cfcfcf;
}
.index-container .list-img{
  display: inline-block;
  width: 30%;
  height: 170rpx;
}
.index-container .text-box{
  display: inline-block;
  position: absolute;
  right: 0;
  width: 69%;
  height: 170rpx;
  margin-left: 0.8%;
}
.index-container .list-txt{
  font-size: 18px;
  padding: 0 15rpx;
  color: #000000;
}
.index-container .source{
  font-size: 16px;
  position: absolute;
  bottom: 10px;
  padding: 0 15rpx;
  height: 40px;
  line-height: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #666666;
}