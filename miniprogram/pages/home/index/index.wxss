/* pages/home/index/index.wxss */
.index-container{
  width: 100%;
  height: auto;
}
.index-container .item-box{
  display: block;
  width: 100%;
  height: auto;
}
.index-container .banner-img{
  display: block;
  width: 100%;
  height: 100%;
}
.index-container .swiper-item{
  display: inline-block;
  width: 100%;
  height: 100%;
}
.index-container .type-box{
  width: auto;
  height: auto;
  padding: 0;
}
.index-container .type-item{
  display: inline-block;
  width: 25%;
  height: auto;
}
.index-container .type-card{
  width: auto;
  height: auto;
  background: #FFF;
  padding: 10px;
  text-align: center;
}
