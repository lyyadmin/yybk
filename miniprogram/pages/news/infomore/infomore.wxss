.information-container{
  width:100%;
  height: auto;
  color: #333;
  background: #FFFFFF;
}
.information-container .information-item{
  width: aoto;
  height: auto;
  padding: 8px 8px 5px 8px;
  border-bottom: solid 1px #efefef;
}
.information-container .item-title{
  width: auto;
  margin: 0;
  color: #333333;
  font-size: 16px;
}
.information-container .item-msg{
  width: 50%;
  height: 20px;
  line-height: 20px;
  display: inline-block;
  overflow:hidden;
  text-overflow: ellipsis;
  color: #666666;
  font-size: 14px;
  text-align: right;
}
.information-container .author_name{
  width: 50%;
  height: 20px;
  line-height: 20px;
  display: inline-block;
  overflow:hidden;
  text-overflow: ellipsis;
  color: #666666;
  font-size: 14px;
  text-align: left;
}
.information-container .img-box{
  width: 100%;
  height: auto;
}
.information-container .piimg{
  display: inline-block;
  width: 32.6%;
