/* pages/news/information/information.wxss */
.information-container{
  width:100%;
  height: auto;
  color: #333;
  background: #FFFFFF;
}
.information-container .item-box{
  margin-top: 60px;
}
.information-container .information-item{
  width: aoto;
  height: auto;
  padding: 8px 8px 5px 8px;
  border-bottom: solid 1px #efefef;
}
.information-container .item-title{
  width: auto;
  margin: 0;
  color: #333333;
  font-size: 16px;
}
.information-container .item-msg{
  width: 50%;
  height: 20px;
  line-height: 20px;
  display: inline-block;
  overflow:hidden;
  text-overflow: ellipsis;
  color: #666666;
  font-size: 14px;
  text-align: right;
}
.information-container .author_name{
  width: 50%;
  height: 20px;
  line-height: 20px;
  display: inline-block;
  overflow:hidden;
  text-overflow: ellipsis;
  color: #666666;
  font-size: 14px;
  text-align: left;
}
.information-container .img-box{
  width: 100%;
  height: auto;
}
.information-container .piimg{
  display: inline-block;
  width: 32.6%;
  max-height: 100px;
  border-radius: 5px;
  margin: 5px 0 0 0;
}
.information-container .imgnext{
  margin-left: 1.1%;
}
.information-container .info-box{
  width:100%;
}
.information-container .more-box{
  width: 100%;
  position: fixed;
  background: #FFFFFF;
}
.information-container .more-title{
  display: inline-block;
  width: 20%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  text-decoration: underline;
  color: #333333;
}
.information-container .vedio-box{
  width: auto;
  padding: 5px 10px;
  padding-bottom: solid 1px #f6f6f6;
}
.information-container .v-title{
  width: 100%;
  font-size: 18px;
  color: #333333;
  padding: 10px 0;
}
.information-container .v-vedio{
  width: 100%;
}
.information-container .list{
  padding: 0 5px;
  height: 200rpx;
  border-bottom: solid 1px #cfcfcf;
}
.information-container .list-img{
  display: inline-block;
  width: 30%;
  height: 170rpx;
  margin-top: 15rpx;
}
.information-container .text-box{
  display: inline-block;
  position: absolute;
  right: 0;
  width: 69%;
  height: 170rpx;
  margin-left: 0.8%;
  margin-top: 15rpx;
}
.information-container .list-txt{
  font-size: 18px;
  padding: 10rpx 15rpx;
  color: #000000;
}
.information-container .source{
  font-size: 16px;
  position: absolute;
  bottom: 10px;
  padding: 0 15rpx;
  height: 40px;
  line-height: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #666666;
}